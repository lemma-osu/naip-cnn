// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "naip_cnn",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		"dockerfile": "./Dockerfile"
	},
	"containerEnv": {
		// Silence TF info and warning messages
		"TF_CPP_MIN_LOG_LEVEL": "2",
		// Set the local data/model directory based on the NAIP_DIR env variable
		"NAIP_DIR": "${localEnv:NAIP_DIR}"
	},
	"mounts": [
		// Mount the data and model directories into the container
		"source=${env:NAIP_DIR}/data,target=${containerWorkspaceFolder}/data,type=bind,consistency=cached",
		"source=${env:NAIP_DIR}/models,target=${containerWorkspaceFolder}/models,type=bind,consistency=cached",
		
		// Mount Earth Engine credentials into the container
		"source=${env:HOME}${env:USERPROFILE}/.config,target=/root/.config,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"github.copilot",
				"charliermarsh.ruff",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"runArgs": [
		"--gpus=all"
	],
	"postCreateCommand": "git config core.editor 'code --wait' && pre-commit install"
}